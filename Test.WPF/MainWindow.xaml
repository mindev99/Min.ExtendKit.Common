<Window
    x:Class="Test.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            x:Name="TestButton"
            Grid.Row="0"
            Width="200"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Button_Click"
            Content="测试" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Image
                x:Name="Icon"
                Width="auto"
                Height="auto"
                MaxWidth="20"
                MaxHeight="20"
                Margin="10" />
            <Button
                x:Name="Open"
                Width="200"
                Height="30"
                Margin="10"
                Click="Open_Click"
                Content="Open" />
            <Button
                x:Name="Read"
                Width="200"
                Height="30"
                Margin="10"
                Click="Read_Click"
                Content="Open" />
        </StackPanel>
    </Grid>
</Window>
